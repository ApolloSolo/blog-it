        <p class="card-text">
          {{user.username}} - {{format_date created_at}}
        </p>
        <div class="d-flex">
          <div class="card-text pe-3">
            <small class="text-muted">
              <i class="fa-regular fa-heart pe-1"></i>{{vote_count}} {{format_plural "point" vote_count}}
            </small>
          </div>
          <div class="card-text">
            <small class="text-muted">
              <i class="fa-regular fa-message pe-1"></i><a id="comments-route" href="/post/{{id}}">{{comments.length}}
              </a>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>